<!DOCTYPE html>
<html>
<head>
  <title>Address Book - List Contacts</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <h1>A List of All Your Contacts :)</h1>
    <ul>
      @foreach (var contact in Model)
      {
        <li><h2>@contact.GetName()</a></h2></li>
        <ul>
          <li>Phone Number: @contact.GetPhone()</li>
          <li>Email: @contact.GetEmail()</li>
          <h3>Address:</h3>
          <ul>
            <li>Street: @contact.GetAddress().GetStreet()</li>
            <li>City: @contact.GetAddress().GetCity()</li>
            <li>State: @contact.GetAddress().GetState()</li>
            <li>Zip: @contact.GetAddress().GetZip()</li>
          </ul>
        </ul>
      }
    </ul>
    <p>
      <a href="/create_contact">Create a New Contact</a>
    </p>
    <p>
      <a href="/contacts_deleted">Delete All Contacts</a>
    </p>
  </div>
</body>
</html>