<!DOCTYPE html>
<html>
<head>
  <title>Address Book - List Contacts</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
</head>
<body>
  <div class="container">
    <div class="whiteBox">
      @{
        if(Model.Count >0)
        {
          <h1>A List of All Your Contacts :)</h1>
        }
        else
        {
          <h1>You Have No Contacts :(</h1>
        }
      }
      <ul>
        @foreach (var contact in Model)
        {
          <div class="contacts">
            <div class="contact">
              <h2>@contact.GetName()</h2>
              <ul>
                <li>Phone Number: @contact.GetPhone()</li>
                <li>Email: @contact.GetEmail()</li>
                <h3>Address:</h3>
                <ul>
                  <li>Street: @contact.GetAddress().GetStreet()</li>
                  <li>City: @contact.GetAddress().GetCity()</li>
                  <li>State: @contact.GetAddress().GetState()</li>
                  <li>Zip: @contact.GetAddress().GetZip()</li>
                </ul>
              </ul>
            </div>
          </div>
        }
      </ul>
      <p>
        <a href="/create_contact" class="btn btn-info" role="button">Create a New Contact</a>
      </p>
      <p>
        <a href="/contacts_deleted" class="btn btn-info" role="button">Delete All Contacts</a>
      </p>
    </div>
  </div>
</body>
</html>